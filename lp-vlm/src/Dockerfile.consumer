# Use lightweight Python base image
FROM python:3.12-slim

# Set working directory inside container
WORKDIR /app

# Set proxies if needed
ENV http_proxy=http://proxy-mu.intel.com:911
ENV https_proxy=http://proxy-mu.intel.com:911
ENV HTTP_PROXY=http://proxy-mu.intel.com:911
ENV HTTPS_PROXY=http://proxy-mu.intel.com:911
ENV no_proxy=localhost,127.0.0.0/8,::1,.intel.com,.intel.net,localhost

# -----------------------------------------
# Install OpenCV system dependencies
# -----------------------------------------
RUN apt-get update && apt-get install -y \
    libgl1 \
    libglib2.0-0 \
    libsm6 \
    libxrender1 \
    libxext6 \
    ffmpeg \
    && rm -rf /var/lib/apt/lists/*
# -----------------------------------------
# Install Python dependencies
# -----------------------------------------
COPY ./lp-vlm/src/requirements.txt /app/
RUN pip install --no-cache-dir -r requirements.txt

# -----------------------------------------
# Copy project files
# -----------------------------------------
COPY ./lp-vlm/src/utils /app/utils
COPY ./lp-vlm/src/config /app/config
COPY ./lp-vlm/src/agent /app/agent
COPY ./lp-vlm/src/main.py /app/

# -----------------------------------------
# Run consumer
# -----------------------------------------
CMD ["python", "main.py"]
